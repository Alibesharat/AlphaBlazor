<style>

    .Connection {
        display: inline-block;
        position: relative;
        width: 80px;
        height: 80px;
    }

        .Connection div {
            position: absolute;
            border: 4px solid #fff;
            opacity: 1;
            border-radius: 50%;
            animation: lds-ripple 1s cubic-bezier(0, 0.2, 0.47, 1) infinite;
        }

            .Connection div:nth-child(2) {
                animation-delay: -0.5s;
            }

    @@keyframes Connection {
        0% {
            top: 36px;
            left: 36px;
            width: 0;
            height: 0;
            opacity: 1;
        }

        100% {
            top: 0px;
            left: 0px;
            width: 72px;
            height: 72px;
            opacity: 0;
        }
    }
</style>

@if(Connected){
<div class="Connection"><div></div><div></div></div>

}


@code {

    [Parameter]
    public bool IsConnected { get; set; }


    protected override void OnAfterRender(bool firstRender)
    {

    }
